ARG ARCH=
ARG BASE_TAG=minimal
ARG BASE_IMAGE=public.ecr.aws/amazonlinux/amazonlinux:${BASE_TAG}
FROM $BASE_IMAGE
ENV PATH=$PATH:/usr/local/bin
RUN dnf upgrade -y; \
    amazon-linux-extras || dnf install -y amazon-linux-extras ;\
    amazon-linux-extras enable python3.8 ;\
    dnf install python3.8 -y ;\
    curl -s https://bootstrap.pypa.io/get-pip.py | python3.8 ;\
    pip3 install setuptools -U --no-cache-dir

MAINTAINER john@composex.io
LABEL runtime=python
LABEL version=3.8

CMD ["python"]
